.wrapper
  .project-info
    Project Title:
    =@project.title
    Manager:
    =User.find(@project.manage_user_id).name
  .creater-info
    =form_with model: @match, local: true do |form|
      -if @project.track_user_id
        Track Maker:
        =User.find(@project.track_user_id).name
        =form.hidden_field :track, value: "0"
      -else
        =form.check_box :track
        =form.label :track, 'Track Maker: 募集中'

      -if @project.lyric_user_id
        Lyric Writer:
        =User.find(@project.lyric_user_id).name
        =form.hidden_field :lyric, value: "0"
      -else
        =form.check_box :lyric
        =form.label :lyric, 'Lyric Writer: 募集中'

      -if @project.singer_user_id
        Singer:
        =User.find(@project.singer_user_id).name
        =form.hidden_field :singer, value: "0"
      -else
        =form.check_box :singer
        =form.label :singer, 'Singer: 募集中'

      -if @project.video_user_id
        Video Creater:
        =User.find(@project.video_user_id).name
        =form.hidden_field :video, value: "0"
      -else
        =form.check_box :video
        =form.label :video, 'Video Creater: 募集中'
      メッセージ
      =form.text_area :comment
      =form.hidden_field :project_id, value: @project.id
      =form.hidden_field :user_id, value: current_user.id
      =form.submit 'マッチング申請'
